<main class="container">
  <div class='font-semibold flex justify-between items-center mb-8'>
    <h1 class='text-2xl'>Collaboradors</h1>
    <%= link_to "New collaborador", 
                new_project_project_user_path(@project),
                data: { turbo_frame: dom_id(ProjectUser.new) },
                class: 'btn btn--primary w-auto' %>
  </div>

  <%= turbo_frame_tag ProjectUser.new %>
  <%= render partial: "header" %>
  <%= turbo_frame_tag "project_users" do %>
    <%= render partial: "project_user", collection: @project_users, locals: { project: @project } %>
  <% end %>
</main>
