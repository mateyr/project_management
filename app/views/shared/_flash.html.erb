<% flash.each do |type, message| %>
  <div class="flash", data-controller="flash", data-action="animationend->flash#remove">
    <div class="flex items-center bg-blue-100 rounded-lg p-3 text-sm text-blue-700" role="alert">
      <svg fill="none" viewBox="0 0 24 24" class="w-5 h-5 mr-3" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div><%= message %></div>    
    </div>
  </div>
<% end %>

