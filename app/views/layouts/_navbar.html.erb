<header class="bg-blue-500 text-white font-semibold mb-16 p-6 lg:px-16 flex items-center justify-between">
  <div class="z-20">
    <%= link_to 'Project Management', '/', class: 'text-2xl' %>
  </div>

  <%= check_box_tag 'hamburger', class: 'hidden peer' %>
  <%= label_tag 'hamburger', class: 'peer-checked:hamburger cursor-pointer md:hidden' do %>
    <div aria-hidden="true" class="w-8 mb-2 h-0.5 rounded bg-white transition duration-300"></div>
    <div aria-hidden="true" class="w-8 h-0.5 rounded bg-white transition duration-300"></div>
  <% end %>

  <nav class="
    peer-checked:translate-x-0
    fixed inset-0
    w-[calc(100%-4.5rem)]
    translate-x-[-100%]
    border-r bg-blue-500
    transition-transform duration-300
    md:border-r-0
    md:w-auto
    md:static
    md:shadow-none
    md:translate-x-0">
    <div class="flex flex-col h-full md:items-center md:flex-row">
      <ul class="px-6 pt-28 space-y-8 md:space-y-0 md:flex md:space-x-12 md:pt-0">
        <li><%= link_to 'About', '#', class: 'block hover:text-gray-200' %></li>
        <li><%= link_to 'Code', 'https://github.com/mateyr', class: 'block hover:text-gray-200' %></li>
        <% if user_signed_in? %>
          <li><%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block hover:text-gray-200" %></li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path, class: "block hover:text-gray-200" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
